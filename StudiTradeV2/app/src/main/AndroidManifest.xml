        android:supportsRtl="true"
        android:theme="@style/Theme.StudiTradeV2"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".PdfViewerActivity"
            android:exported="false"
            android:label="@string/title_activity_pdf_viewer"
            android:theme="@style/Theme.StudiTradeV2" />
        <activity
            android:name=".SellActivity"
            android:exported="false"
            android:label="@string/title_activity_sell_files"
            android:theme="@style/Theme.StudiTradeV2" />
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.StudiTradeV2" />
        <activity
            android:name=".SettingsActivity"
            android:exported="false"
            android:label="@string/title_activity_settings"
            android:theme="@style/Theme.StudiTradeV2" />
        <activity
            android:name=".PurchasedActivity"
            android:exported="false"
            android:label="@string/title_activity_purshased"
            android:theme="@style/Theme.StudiTradeV2" />
        <activity
            android:name=".FavoritesActivity"
            android:exported="false"
            android:label="@string/title_activity_favorites"
            android:theme="@style/Theme.StudiTradeV2" /> <!-- LoginActivity : Point d'entrÃ©e principal -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.StudiTradeV2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.StudiTradeV2" />
    </application>

</manifest>